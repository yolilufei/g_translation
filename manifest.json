{
  "manifest_version": 3,
  "name": "gs-trans",
  "version": "1.0.1",
  "action": {
    "default_icon": {
      "16": "src/images/16.png",
      "32": "src/images/32.png",
      "64": "src/images/64.png",
      "128": "src/images/128.png"
    },
    "default_title": "王翻译",
    "default_popup": "src/html/popup.html"
  },
  "description": "中英互译，支持片段翻译",
  "author": "guoshi",
  "permissions": ["contextMenus", "webRequest", "storage"],
  "icons": {
    "16": "src/images/16.png",
    "32": "src/images/32.png",
    "64": "src/images/64.png",
    "128": "src/images/128.png"
  },
  "content_scripts": [
    {
      "js": ["src/scripts/content_script.js"],
      "matches": ["https://*/*"],
      "run_at": "document_start"
    }
  ],
  "homepage_url": "https://github.com/yolilufei/g_translation.git"
}
